@model Licenta_Front_End.Models.Task
@using Microsoft.AspNetCore.Http;
@{
	ViewData["Title"] = "Details";
}



<div>
	<hr />
	<dl class="row box">
		<dt class="col-sm-2 butoane"></dt>
		<dd class="col-sm-10"></dd>
		<dt class="col-sm-2 butoane">
			@Html.DisplayNameFor(model => model.TaskName)
		</dt>
		<dd class="col-sm-10">
			<textarea asp-for="TaskName" class="form-control" value="model => model.TaskName" id="exampleFormControlTextarea" rows="1" readonly="readonly" style="resize:none;"></textarea>
		</dd>
		<dt class="col-sm-2 butoane">
			@Html.DisplayNameFor(model => model.ProjectName)
		</dt>
		<dd class="col-sm-10">
			<textarea asp-for="ProjectName" class="form-control" value="model => model.ProjectName" id="exampleFormControlTextarea" rows="1" readonly="readonly" style="resize:none;"></textarea>
		</dd>

		@if ((Context.Session.GetString("Role") != "Developer"))
		{
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.TaskOwnerID)
			</dt>
			<dd class="col-sm-10">
				<textarea asp-for="TaskOwnerID" class="form-control" value="model => model.ProjectName" id="exampleFormControlTextarea" rows="1" readonly="readonly" style="resize:none;"></textarea>
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Id)
			</dt>
			<dd class="col-sm-10">
				<textarea asp-for="Id" class="form-control" value="model => model.ProjectName" id="exampleFormControlTextarea" rows="1" readonly="readonly" style="resize:none;"></textarea>
			</dd>
		}
		<dt class="col-sm-2">Details</dt>
		<dd class="col-sm-10">
			<textarea asp-for="Details" class="form-control" value="model => model.Details" id="exampleFormControlTextareaRedeem" rows="5"></textarea>

		</dd>

		<div class="butoane">
			@if ((Context.Session.GetString("Role") != "Developer"))
			{
				@Html.ActionLink("Edit", "Edit", new { Id = Model.Id }, new { @class = "btn btn-warning", @role = "button" })
			}

			@if ((Context.Session.GetString("Role") == "Developer"))
			{
				<a asp-action="TasksForEmployee" class="btn btn-warning">Back to List</a>
			}
			else
			{
				<a asp-action="Index" class="btn btn-warning">Back to List</a>
			}
			<br>
			<br>
		</div>
		<br>
		<br>
	</dl>
	<br>
	<br>
</div>
<br>
<br>


