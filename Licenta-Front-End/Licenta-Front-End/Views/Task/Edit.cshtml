@model Licenta_Front_End.Models.Task
@using Microsoft.AspNetCore.Http;

@{
	ViewData["Title"] = "Edit";
}

<hr />
<div class="row box d-flex justify-content-center">
	<div class="col-md-7">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="TaskName" class="control-label">Task Name</label>
				<input asp-for="TaskName" class="form-control" />
				<span asp-validation-for="TaskName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProjectName" class="control-label">Project Name</label>
				<input asp-for="ProjectName" class="form-control" />
				<span asp-validation-for="ProjectName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control form-control-lg">
					<option value="Ongoing">Ongoing</option>
					<option value="Finished">Finished</option>
				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TaskOwnerFirstName" class="control-label">Task Owner First Name</label>
				<input asp-for="TaskOwnerFirstName" class="form-control" />
				<span asp-validation-for="TaskOwnerFirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TaskOwnerLastName" class="control-label">Task Owner Last Name</label>
				<input asp-for="TaskOwnerLastName" class="form-control" />
				<span asp-validation-for="TaskOwnerLastName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="TaskOwnerID" class="control-label">Task Owner ID</label>
				<input asp-for="TaskOwnerID" class="form-control" />
				<span asp-validation-for="TaskOwnerID" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Details" class="control-label"></label>
				<textarea asp-for="Details" class="form-control" id="exampleFormControlTextareaRedeem" rows="3"></textarea>
				<span asp-validation-for="Details" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>

			@if ((Context.Session.GetString("Role") == "Leader"))
			{
				<div>
					<a asp-action="IndexForLeader" class="btn btn-danger">Back to List</a>
				</div>

			}
			else
			{
				<div>
					<a asp-action="Index" class="btn btn-danger">Back to List</a>
				</div>
			}
			<br>
			<br>

		</form>
		<br>
		<br>

	</div>
</div>
<br>
<br>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
