@model Licenta_Front_End.Models.Inbox

@{
	ViewData["Title"] = "Create";
}

<hr />
<div class="row box">
	<div class="col-md-5 butoane">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Recipient" class="control-label"></label>
				<input type="email" asp-for="Recipient" class="form-control"  required="required"/>
				<span asp-validation-for="Recipient" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Sender" class="control-label"></label>
				<input type="email" asp-for="Sender" class="form-control"  required="required"/>
				<span asp-validation-for="Sender" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Message" class="control-label"></label>
				<textarea asp-for="Message" class="form-control" id="exampleFormControlTextarea1" rows="3"  required="required"></textarea>
				<span asp-validation-for="Message" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control form-control-lg"  required="required">
					<option value="Unread">Unread</option>
					<option value="Read">Read</option>

				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary " />
			</div>
			<div>
				<a asp-action="Index" class="btn btn-danger ">Back to List</a>
			</div>
			<br>
			<br>
		</form>
		<br>
		<br>
	</div>
	<br>
	<br>
</div>
<br>
<br>



@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
