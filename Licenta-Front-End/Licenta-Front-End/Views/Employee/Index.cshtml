@model IEnumerable<Licenta_Front_End.Models.Employee>
@{
	ViewData["Title"] = "Index";
}



@using (Html.BeginForm("Index", "Employee", FormMethod.Get))
{
	<p>
		<a asp-action="Create" class="btn btn-warning" style="background-color: #E6B471;" >Create New</a>
		<input class="btn btn-warning" type="submit" value="Search" placeholder="Search..." style="background-color: #E6B471;" />
	</p>
	<br>
	@Html.TextBox("searching", null, new { @class = "form-control" , @placeholder="Search..."})
	<br>

}
<br>



	<div class="table-responsive box">
		<table class="table thead-light table-striped table-white box2">

			<thead class="table-warning">

				<tr>
					<th>
						@Html.DisplayNameFor(model => model.FirstName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.LastName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Salary)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.DepartamentName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.JobTitle)
					</th>

					<th>
						@Html.DisplayNameFor(model => model.Password)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Role)
					</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.FirstName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.LastName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Salary)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.DepartamentName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.JobTitle)
						</td>

						<td>
							@Html.DisplayFor(modelItem => item.Password)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Role)
						</td>
						<td>
							@Html.ActionLink("Edit", "Edit", new { Id = item.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button" , @style= "background-color: #039E67; Color: black; "})
						</td>
						<td>
							@Html.ActionLink("Details", "Details", new { Id = item.Id }, htmlAttributes: new { @class = "btn btn-warning", @role = "button" , @style = "background-color: #E6B471;"})
						</td>
						<td>
							@Html.ActionLink("Delete", "Delete", new { Id = item.Id }, htmlAttributes: new { @class = "btn btn-danger", @role = "button" , @style = "background-color: #CC621B; border-color: #CC621B; color: black;" })
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

<br>
