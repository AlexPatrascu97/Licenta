@model Licenta_Front_End.Models.Task

@{
	ViewData["Title"] = "Create";
}

<hr />
<div class="row box">
	<div class="col-md-5 butoane">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ProjectName" class="control-label"></label>
				<input asp-for="ProjectName" class="form-control"  required="required"/>
				<span asp-validation-for="ProjectName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TaskName" class="control-label"></label>
				<input asp-for="TaskName" class="form-control"  required="required"/>
				<span asp-validation-for="TaskName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control form-control-lg">
					<option value="Ongoing">Ongoing</option>
					<option value="Finished">Finished</option>
				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Details" class="control-label"></label>
				<textarea asp-for="Details" class="form-control" id="exampleFormControlTextarea1" rows="3" required="required"></textarea>
				<span asp-validation-for="Details" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>

			<div>
				<a asp-action="Index" class="btn btn-danger ">Back to List</a>
			</div>
			<br>
			<br>
		</form>
		<br>
		<br>
	</div>
	<br>
	<br>
</div>
<br>
<br>



@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
