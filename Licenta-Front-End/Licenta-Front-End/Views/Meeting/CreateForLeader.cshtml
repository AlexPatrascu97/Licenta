@model Licenta_Front_End.Models.Meeting

@{
	ViewData["Title"] = "CreateForLeader";
}
<hr />
<div class="row box d-flex justify-content-center">
	<div class="col-md-7 butoane">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="MeetingName" class="control-label"></label>
				<input asp-for="MeetingName" class="form-control" required="required" />
				<span asp-validation-for="MeetingName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProjectName" class="control-label"></label>
				<input asp-for="ProjectName" class="form-control" required="required" />
				<span asp-validation-for="ProjectName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Link" class="control-label"></label>
				<input asp-for="Link" class="form-control" />
				<span asp-validation-for="Link" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Date" class="control-label"></label>
				<input asp-for="Date" class="form-control" required="required" />
				<span asp-validation-for="Date" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Details" class="control-label"></label>
				<textarea asp-for="Details" class="form-control" id="exampleFormControlTextareaRedeem" rows="5"></textarea>
				<span asp-validation-for="Details" class="text-danger"></span>
			</div>

			<br>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" onclick="window.location= '@Url.Action( "IndexForDevAndLead", "MeetingController")'" />
			</div>
			<div>
				<a asp-action="IndexForDevAndLead" class="btn btn-danger ">Back to List</a>
			</div>
			<br>
			<br>
		</form>
		<br>
		<br>
	</div>
	<br>
	<br>
</div>
<br>
<br>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

