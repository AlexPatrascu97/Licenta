@model Licenta_Front_End.Models.Task

@{
    ViewData["Title"] = "EditTasks";
}


<hr />
<div class="row box d-flex justify-content-center">
	<div class="col-md-7 butoane">
		<form asp-action="EditTasks">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="TaskName" class="control-label"></label>
				<input asp-for="TaskName" class="form-control" readonly="@(true)" />
				<span asp-validation-for="TaskName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProjectName" class="control-label"></label>
				<input asp-for="ProjectName" class="form-control" readonly="@(true)" />
				<span asp-validation-for="ProjectName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="TaskOwnerID" class="control-label"></label>
				<input asp-for="TaskOwnerID" class="form-control" readonly="@(true)" />
				<span asp-validation-for="TaskOwnerID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Details" class="control-label"></label>
				<textarea asp-for="Details" class="form-control" id="exampleFormControlTextarea1" rows="6" readonly="@(true)" ></textarea>
				<span asp-validation-for="Details" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control form-control-lg">
					<option value="Ongoing">Ongoing</option>
					<option value="Finished">Finished</option>
				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" style = "background-color: #039E67; Color: black; " />
			</div>

			<div>
				<a asp-action="TasksForEmployee" class="btn btn-warning" style = "background-color: #CC621B; border-color: #CC621B; color: black;">Back to List</a>
			</div>

		</form>
	</div>
</div>
<br />
<br />
<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
