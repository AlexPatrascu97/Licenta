@model Licenta_Front_End.Models.Task

@{
	ViewData["Title"] = "CreateLeader";
}

<hr />
<div class="row box d-flex justify-content-center">
	<div class="col-md-5 butoane">
		<form asp-action="CreateLeader">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ProjectName" class="control-label"></label>
				<input asp-for="ProjectName" class="form-control" required="required" />
				<span asp-validation-for="ProjectName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TaskName" class="control-label"></label>
				<input asp-for="TaskName" class="form-control" required="required" />
				<span asp-validation-for="TaskName" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="Details" class="control-label"></label>
				<textarea asp-for="Details" class="form-control" id="exampleFormControlTextarea1" rows="3" required="required" ></textarea>
				<span asp-validation-for="Details" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" style = "background-color: #039E67; Color: black; " />
			</div>

			<div>
				<a asp-action="IndexForLeader" class="btn btn-danger " style = "background-color: #CC621B; border-color: #CC621B; color: black;">Back to List</a>
			</div>
		</form>
	</div>
</div>



