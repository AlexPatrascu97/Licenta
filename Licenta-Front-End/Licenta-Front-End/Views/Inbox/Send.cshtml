@model Licenta_Front_End.Models.Inbox

@{
    ViewData["Title"] = "Send";
}


<hr />
<div class="row box d-flex justify-content-center">
    <div class="col-md-7 butoane">
		<form asp-action="Send">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Sender" class="control-label"></label>
				<input asp-for="Sender" class="form-control" value="@Html.ValueFor(o => o.Recipient)" readonly="readonly" />
				<span asp-validation-for="Sender" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Recipient" class="control-label"></label>
				<input type="email" asp-for="Recipient" class="form-control" required="required" value="" />
				<span asp-validation-for="Recipient" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" required="required"/>
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Message" class="control-label"></label>
				<textarea asp-for="Message" class="form-control" id="exampleFormControlTextarea1" rows="3" required="required"></textarea>
				<span asp-validation-for="Message" class="text-danger"></span>
			</div>



			<div class="form-group">
				<input type="submit" value="Send" class="btn btn-primary" />
			</div>

			<div>
				<a asp-action="EmployeeMails" class="btn btn-danger">Back to List</a>
			</div>

		</form>
    </div>
</div>
<br>
<br>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
